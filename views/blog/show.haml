- content_for(:title){ article.title } if defined?(full)%article  %h1.article-title    = defined?(full) ? article.title : %^<a href="#{article.url}">#{article.title}</a>^  %span.article-header    = article.create_date.strftime("%e %b %Y")    |    %a{:href => "#{article.url}#disqus_thread", :'data-disqus-identifier'=>article.url}    |    = tags_as_html article.tags  .article-body    = render_body article  %br.clear/- if defined?(full) && article.enable_comments  .clear  %hr/  #disqus_thread  = render :partial => :disqus_js