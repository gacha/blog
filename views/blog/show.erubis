<article>  <h1 class="article-title"><%= defined?(full) ? article.title : %^<a href="#{article.url}">#{article.title}</a>^ %> </h1>  <span class="article-header"><%= article.create_date.strftime("%d.%m.%Y") %>    | <%= tags_as_html article.tags %></span>  <div class="article-body">    <%= render_body article %>  </div>  <br class="clear"/></article><% if defined?(full) %>    <hr/>    <div id="disqus_thread"></div>    <script type="text/javascript">        /**         * var disqus_identifier; [Optional but recommended: Define a unique identifier (e.g. post id or slug) for this thread]         */        (function() {            var dsq = document.createElement('script');            dsq.type = 'text/javascript';            dsq.async = true;            dsq.src = 'http://gachaswebs.disqus.com/embed.js';            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);        })();    </script>    <noscript>Please enable JavaScript to view the      <a href="http://disqus.com/?ref_noscript=gachaswebs">comments powered by Disqus.</a></noscript>    <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a><% end %>